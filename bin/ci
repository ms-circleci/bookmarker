#!/usr/bin/env ruby

require "date"

tests = Dir["spec/**/*_spec.rb"].
  sort.
  # Add some randomization. Different test order every day.
  shuffle(random: Random.new(ENV['GITHUB_SHA'].to_i(16))).
  select.
  with_index do |el, i|
    i % ENV["CI_NODE_TOTAL"].to_i == ENV["CI_NODE_INDEX"].to_i
  end

exec "xvfb-run bundle exec rspec -f d #{tests.join(" ")}"